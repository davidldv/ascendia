# Ascendia API (Fastify) environment variables
#
# Supabase sources:
# - Settings → API: SUPABASE_URL, keys
# - Settings → Database: DATABASE_URL (Direct / Transaction pooler)

PORT=3000
HOST=0.0.0.0
NODE_ENV=development
LEVEL_UP_EVERY_DAYS=7

# If your API talks to Supabase via its server key (admin actions):
SUPABASE_URL="https://YOUR_PROJECT_REF.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="YOUR_SUPABASE_SERVICE_ROLE_KEY"  # keep secret

# Optional: enables POST /internal/reconcile (protected by x-cron-secret)
CRON_SECRET="change-me"

# Transaction Pooler
DATABASE_URL="postgresql://postgres..."
