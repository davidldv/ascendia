{
  "name": "ascendia",
  "private": true,
  "engines": {
    "node": ">=20 <23"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "postinstall": "patch-package",
    "render:build": "npm ci --include=dev && npm --workspace apps/api run build",
    "render:start": "npm --workspace apps/api run start",
    "mobile:start": "npm --workspace apps/mobile run start --",
    "mobile:android": "npm --workspace apps/mobile run android --",
    "mobile:ios": "npm --workspace apps/mobile run ios --",
    "mobile:web": "npm --workspace apps/mobile run web --",
    "mobile:lint": "npm --workspace apps/mobile run lint",
    "mobile:draft": "npm --workspace apps/mobile run draft",
    "mobile:development-builds": "npm --workspace apps/mobile run development-builds",
    "mobile:deploy": "npm --workspace apps/mobile run deploy",
    "api:dev": "npm --workspace apps/api run dev --",
    "api:start": "npm --workspace apps/api run start --",
    "api:build": "npm --workspace apps/api run build --",
    "lint": "npm run mobile:lint"
  },
  "devDependencies": {
    "patch-package": "^8.0.0"
  }
}
